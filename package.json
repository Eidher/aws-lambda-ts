{
  "name": "eidher-hello-world",
  "version": "1.0.0",
  "description": "hello world sample for NodeJS",
  "main": "app.js",
  "repository": "https://github.com/awslabs/aws-sam-cli/tree/develop/samcli/local/init/templates/cookiecutter-aws-sam-hello-nodejs",
  "author": "Eidher Escalona <eidher.escalona@flexshopper.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0"
  },
  "scripts": {
    "start": "webpack -w",
    "test": "jest",
    "build": "NODE_ENV=${NODE_ENV:-development} webpack",
    "package": "sam package --template-file template.yaml --s3-bucket $npm_package_name-${STAGE:-dev} --output-template-file template.packaged.yaml",
    "deploy": "sam deploy --template-file template.packaged.yaml --stack-name $npm_package_name-${STAGE:-dev} --capabilities CAPABILITY_IAM --parameter-override Stage=${STAGE:-dev} ProjectName=$npm_package_name --no-fail-on-empty-changeset",
    "clean": "rm -rf -v dist/*"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.3",
    "@types/chai": "^4.1.3",
    "@types/jest": "^23.1.4",
    "@types/node": "^10.0.4",
    "aws-sdk": "^2.234.1",
    "jest": "^23.3.0",
    "jest-extended": "^0.11.1",
    "ts-jest": "^23.0.0",
    "ts-loader": "^4.2.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^3.5.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1",
    "yaml-cfn": "^0.2.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
